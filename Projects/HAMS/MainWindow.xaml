<Window x:Class="HAMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS"
        xmlns:ucs="clr-namespace:HAMS.UCS"
        mc:Ignorable="d" FontSize="14" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
  <Window.Resources>
    <HierarchicalDataTemplate x:Key="ItemTemplate" ItemsSource="{Binding Nodes}">
      <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
    </HierarchicalDataTemplate>
  </Window.Resources>
  <DockPanel>
    <Menu DockPanel.Dock="Top" x:Name="MenuMain" FontSize="14" ItemTemplate="{StaticResource ItemTemplate}"/>
    <ToolBar DockPanel.Dock="Top"/>
    <StatusBar DockPanel.Dock="Bottom"/>
    <TreeView DockPanel.Dock="Left" x:Name="TvMenu" ItemTemplate="{StaticResource ItemTemplate}"/>
    <UniformGrid>
      
    </UniformGrid>
  </DockPanel>
</Window>
