<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="600">
  <Canvas>
    <TextBlock Canvas.Left="165" Canvas.Top="92" Text="Id" TextWrapping="Wrap"/>
    <TextBlock Canvas.Left="165" Canvas.Top="133" Text="Name" TextWrapping="Wrap"/>
    <TextBlock Canvas.Left="165" Canvas.Top="167" Text="Phone" TextWrapping="Wrap"/>
    <TextBlock Canvas.Left="165" Canvas.Top="207" Text="Address" TextWrapping="Wrap"/>
    <ComboBox Name="CmbId" Canvas.Left="230" Canvas.Top="90" Width="120" SelectionChanged="CmbId_SelectionChanged"/>
    <TextBox Name="TxtName" Text="{Binding Name}" Canvas.Left="230" Canvas.Top="131" Width="120"/>
    <TextBox Name="TxtPhone" Text="{Binding PhoneNumber}" Canvas.Left="230" Canvas.Top="166" Width="120"/>
    <TextBox Name="TxtAddress" Text="{Binding Address}" Canvas.Left="230" Canvas.Top="206" Width="120"/>

  </Canvas>
</Window>
